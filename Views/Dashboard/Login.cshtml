@model DailyTravelManagement.Models.Users

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DailyTravelManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DailyTravelManagement.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <style>
        .bg-images {
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            width: 100%;
            height: 100vh; /* full viewport height */
            object-fit: cover; /* maintains aspect ratio */
        }
    </style>
</head>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 p-0">
            <img class="bg-images" src="@Url.Content("~/images/travel-img.jpg")" alt="img-alt">
        </div>

        <div class="col-md-6 login-padding">
            <h3 class="p-0 text-center text-white">Daily Travel Management System</h3>
            <div class="widget p-3">
                <h4 class="p-0 text-center">Login</h4>
                <form id="txt_Name" asp-action="Login" method="post">
                    <div class="form-group mb-2 px-3">
                        <label class="form-label" asp-for="Username">Username</label>
                        <input type="text" asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2 px-3">
                        <label class="form-label" asp-for="Password">Password</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center pt-1">
                        <input type="submit" value="Login" class="btn btn-primary custom-btn" />
                    </div>
                </form>

                <div class="text-inline text-center">
                    <a asp-action="Register">Register Account</a>
                </div>
            </div>

        </div>


    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#txt_Name').keypress(function (e) {
            var regex = new RegExp("^[ a-zA-Z0-9]+$");
            var str = String.fromCharCode(!e.charCode ? e.which : e.charCode);
            if (regex.test(str)) {
                return true;
            }
            e.preventDefault();
            return false;
        });
    </script>
    }